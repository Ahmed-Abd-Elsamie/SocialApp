<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/asdasd"

    >


    <android.support.design.widget.CoordinatorLayout

        android:id="@+id/all_friendddd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"



        >

        <android.support.v7.widget.CardView
            android:id="@+id/ccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_gravity="center"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"


                >

                <TextView
                    android:id="@+id/txt_num_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/text_margin"
                    android:drawableLeft="@drawable/ic_num_people"
                    android:gravity="center"
                    android:text=" .17"
                    android:textColor="#262626"
                    android:textSize="18dp"


                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="....."
                    android:textColor="#fff"
                    android:background="@drawable/btn_connect"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/btn_connect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:enabled="false"
                    />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#8f8c8c"

                    />


                <android.support.design.widget.CoordinatorLayout

                    android:id="@+id/all_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:padding="10dp"


                    >


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/friend1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/test"
                        app:civ_border_color="#fff"
                        app:civ_border_width="2dp"

                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/friend2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/test"
                        app:civ_border_color="#fff"
                        app:civ_border_width="2dp"
                        app:layout_anchor="@+id/friend1"
                        app:layout_anchorGravity="right|center"


                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/friend3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/test"
                        app:civ_border_color="#fff"
                        app:civ_border_width="2dp"
                        app:layout_anchor="@+id/friend2"
                        app:layout_anchorGravity="right|center"


                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp"
                        android:gravity=""
                        android:paddingLeft="40dp"
                        android:text="See All Connections"
                        android:textColor="#000"
                        app:layout_anchor="@+id/friend3"
                        app:layout_anchorGravity="right|center"


                        />


                </android.support.design.widget.CoordinatorLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </android.support.design.widget.CoordinatorLayout>


</android.support.constraint.ConstraintLayout>